//java
class Solution {
    public int findDelayedArrivalTime(int arrivalTime, int delayedTime) {
        int time=0;
        time=arrivalTime+delayedTime;
        while(time >=24){ 
            time=time-24;
            if(time==24){
                return 0;
            }
        }
        return time;
    }
}
